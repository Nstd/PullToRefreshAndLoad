<com.jingchen.pulltorefreshandload.DefaultPullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/pull_to_refresh_footer" />
    <!-- 支持所有实现Pullable接口的View -->

    <com.jingchen.pulltorefreshandload.pullableview.PullableExpandableListView
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cccccc"
        android:divider="#000000"
        android:dividerHeight="1dp" />

    <include layout="@layout/pull_to_refresh_header" />

</com.jingchen.pulltorefreshandload.DefaultPullToRefreshLayout>